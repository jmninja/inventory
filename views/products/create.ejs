<%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/nav.ejs') %>
  <div class="container-fluid d-flex justify-content-center">
    <div
      class="card justify-content-center"
      style="width: 18rem; margin-top: 50px"
    >
      <form class="card-body" action="/products" method="POST">
        <div class="row justify-content-center">
          <div class="col-md-auto">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="Name of product"
              name="name"
            />
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-auto">
            <label for="numberLeft" class="form-label">Number in Stock</label>
            <input
              type="text"
              class="form-control"
              id="numberLeft"
              placeholder="How many product are you adding?"
              name="numberLeft"
            />
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-auto">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="How much does a single unit cost?"
              name="price"
            />
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-auto" id="create-btn">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%- include('../partials/footer.ejs') %>
</body>
